<h1>Product List</h1>
<a class="btn btn-primary" href="/products/add">Add</a>
<a class="btn btn-warning" href="/products/sort/asc">Sort by name ascending</a>
<a class="btn btn-success" href="/products/sort/desc">Sort by name descending</a>
<form action="/products/search" method="post">
    <input class="form-control" type="search" name="keyword" id="" placeholder="Search by product name" required>
</form>
<table border="1">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Image</th>
        <th>Category</th>
        <th>Menu</th>
    </tr>
    {{#each productList }}        
    <tr>
        <td>{{name}}</td>
        <td>{{price}}</td>
        <td>
            <img src="{{image}}" alt="" height="200">
        </td>
        <td>{{category.name}}</td>
        <td>
            <a class="btn" href="/products/edit/{{ _id }}">Edit</a>
            <a class="btn" href="">Delete</a>
            <a class="btn" href="/products/delete/{{_id}}"        onclick="return confirm('Do you want to delete this product ?')" ;>Delete</a>
        </td>
    </tr>
    {{/each}}
</table>